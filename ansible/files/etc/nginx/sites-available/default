# Default server configuration

server {
    root /var/www/html;

    index index.html index.htm index.nginx-debian.html;

    server_name beta.bkmrk.life;

    # write access and error logs to /var/log
    access_log /var/log/bkmrk_access.log;
    error_log /var/log/bkmrk_error.log;

    location / {
        # forward application requests to the gunicorn server
        proxy_pass http://localhost:8000;
        proxy_redirect off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /static {
        # handle static files directly, without forwarding to the application
        alias /home/bkmrk/bkmrk/static;
        expires 30d;
    }

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/beta.bkmrk.life/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/beta.bkmrk.life/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
    if ($host = beta.bkmrk.life) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80 default_server;
    listen [::]:80 default_server;

    server_name beta.bkmrk.life;
    return 404; # managed by Certbot
}
